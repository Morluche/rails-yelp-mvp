<h1 class="text-center">All restaurant</h1>
<div class="container col-8 mt-5">
  <h2><%= link_to "Add a restaurant", new_restaurant_path %></h2>

  <div class="card-columns">
    <% @restaurants.each do |restaurant| %>
    <div class="card m-1 mt-2" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title"><%= link_to restaurant.name, restaurant_path(restaurant) %></h5>
        <p class="card-text"><%=restaurant.address%></p>
        <p class="card-text"><%=restaurant.category%></p>
        <p class="card-text"><%=restaurant.phone_number%></p>
      </div>
    </div>
    <% end %>
  </div>
</div>
<div class="text-center">
</div>
